@article{Pilling2023FixingTFD,
  abstract = {This research investigates how experiential futures methodologies can cultivate repair capacity for Internet of Things (IoT) devices, addressing growing electronic waste concerns. We employ design fiction and participatory workshops to create speculative future scenarios that engage users in imagining and practicing repair activities for smart devices. Data collected from these workshops and follow-up interviews are qualitatively analyzed to assess changes in participants' attitudes and skills regarding device repair. Our findings reveal that experiential futures approaches can effectively reduce psychological barriers to repair by demystifying technology, fostering repair communities, and encouraging more sustainable relationships with electronic products, suggesting valuable applications for design education and policy development that could extend device lifespans and reduce waste.},
